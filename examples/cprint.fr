
fn start() {
    def str = alloc(16);

    if 0 {
        *str = "True!\0";
    } else {
        *str = "False!\0";
    }

    cprint(str);
}

fn cprint(str) {
    def counter = 0;
    def running = *add(str, counter);
    while running {
        print(running);
        counter = add(counter, 1);
        running = *add(str, counter);
    }
}
